page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.userinfo {
    height: 300rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
	  flex-direction: column;
    align-items: center;
    transition: all 300ms ease;
}

.avatar {
    width: 200rpx;
    height: 200rpx;
    margin: 20rpx;
    display: table-cell;
    vertical-align: middle;
    text-align: center;
    border-radius: 50%;
}

.nickname {
    align-items: center;
    font-size: 32rpx;
    color: #007AFF;
}
.showClass{
  display:block;
}
.hideClass{
  display:none;
}